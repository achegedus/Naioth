- form_for @account_session, :url => account_session_path do |f|
	%fieldset
		%legend Login
		= f.error_messages
		%ol
			%li
				= f.label :login
				= f.text_field :login
			%li
				= f.label :password
				= f.password_field :password
			%li
				= f.check_box :remember_me
				= f.label :remember_me
	%fieldset.submit
		= f.submit "Login"